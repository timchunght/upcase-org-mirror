<%= semantic_form_for @user || User.new do |form| %>
  <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to] %>
  <%= form.inputs do %>
    <%= form.input :first_name %>
    <%= form.input :last_name %>
    <%= form.input :email, as: :email %>
    <%= form.input :password, required: true %>
  <% end %>
  <%= form.actions do %>
    <%= form.action :submit, label: 'Sign up' %>
  <% end %>
<% end %>
